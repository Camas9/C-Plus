#include <iostream>
​
using namespace std;
​
int calc_even(int *p, int size){
    
    int s = 0;
    
    for(int i=0;i<size;i++){
        if((i+1)%2==0)
           s += *(p+i);
    }
    
    return s;
    
}
​
int main(){
    
    int m[8]={1,2,3,4,5,6,7,8};
    
    int sum = calc_even(m,8);
    
    cout<<sum<<endl;
    
    return 0;
}
